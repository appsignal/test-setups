version: '3.8'

services:
  app:
    image: <%= @app %>:latest
    ports:
      - "4001:3000"
    environment:
      - APPSIGNAL_APP_NAME=<%= @app.gsub('/', '-') %>
    env_file:
      - ../../appsignal.env
      - ../../appsignal_key.env
    volumes:
      - ./app:/app
      - ../integration:/integration
